@model UserViewModel

@{
    ViewBag.Title = "Create User";
    var roles = ViewBag.Roles as IQueryable<IdentityRole>;
}

<h2 class="text-center text-info my-4">TẠO TÀI KHOẢN</h2>
<div style="width: 80%; padding-left: 20px">
    <form asp-controller="User" asp-action="Create" method="post" class="mt-2">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label asp-for="FullName"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label asp-for="Email"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label asp-for="Password"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label asp-for="ConfirmPassword"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="row col-xs-12">
            <div class="col-md-4 col-sm-4">
                <div class="form-group">
                    <label asp-for="ProvinceId"></label>
                    <select asp-for="ProvinceId" asp-items="@(new SelectList(Model.Provinces, "id", "_name"))" class="custom-select" onchange="create.changeProvince(this.value)">
                        <option selected value="">-Chọn-</option>
                    </select>
                    <span asp-validation-for="ProvinceId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="form-group  ">
                    <label asp-for="DistrictId"></label>
                    <select asp-for="DistrictId" asp-items="@(new SelectList(Model.Districts, "id", "DistrictName"))" class="custom-select" onchange="create.changeDistrict(this.value)">
                        <option selected value="">-Chọn-</option>
                    </select>
                    <span asp-validation-for="DistrictId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="form-group  ">
                    <label asp-for="WardId"></label>
                    <select asp-for="WardId" asp-items="@(new SelectList(Model.Wards, "id", "WardName"))" class="custom-select">
                        <option selected value="">-Chọn-</option>
                    </select>
                    <span asp-validation-for="WardId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label asp-for="Address"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-3">
                <label asp-for="RolesId"></label>
            </div>
            <div class="col-sm-9">
                <select asp-for="RolesId" class="custom-select">
                    <option value="">Select a role</option>
                    @if (roles != null && roles.Any())
                    {
                        foreach (var role in roles)
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="RolesId" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Tạo</button>
                <a asp-controller="User" asp-action="Index" class="btn btn-warning">Hủy</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="~/js/address.js" asp-append-version="true"></script>
}
