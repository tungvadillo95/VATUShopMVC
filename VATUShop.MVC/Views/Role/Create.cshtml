@model RoleViewModel
@{
    ViewBag.Title = "Create Role";
}
<h2 class="text-center text-primary my-4">TẠO VAI TRÒ</h2>
<div style="width: 80%; padding-left: 20px">
    <form asp-controller="Role" asp-action="Create" method="post" class="mt-2">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="RoleName"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Role" asp-action="Index" class="btn btn-warning">Back</a>
            </div>
        </div>
    </form>
</div>